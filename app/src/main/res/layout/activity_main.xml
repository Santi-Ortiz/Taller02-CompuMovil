<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    >

    <ImageButton
        android:id="@+id/imageButtonContacts"
        android:layout_width="320dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/contacts"
        android:scaleType="centerInside"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/imageButtonCamera"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonContacts"
        app:srcCompat="@drawable/camera"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    />
    <ImageButton
        android:id="@+id/imageButtonMaps"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonCamera"
        app:srcCompat="@drawable/osmap"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>